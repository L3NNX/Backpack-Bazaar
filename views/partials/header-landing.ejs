<!-- views/partials/header.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jhola - Premium Bags & Accessories</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; }
        .gradient-text {
            background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
    </style>
</head>
<body class="bg-white text-zinc-800">
    <nav class="w-full flex justify-between items-center px-8 py-4 border-b border-zinc-100 sticky top-0 bg-white/80 backdrop-blur-lg z-50">
        
        <!-- Logo -->
        <a href="/" class="text-2xl font-bold tracking-tight text-zinc-900">Jhola</a>
        
        <!-- Middle Links -->
        <div class="hidden md:flex items-center gap-8 text-sm font-medium">
            <a href="/" class="text-zinc-600 hover:text-zinc-900 transition-colors">Home</a>
            <a href="/shop" class="text-zinc-600 hover:text-zinc-900 transition-colors">Shop</a>

            <% if(locals.loggedInUser) { %>
                <a href="/cart" class="text-zinc-600 hover:text-zinc-900 transition-colors flex items-center gap-1">
                    <i class="ri-shopping-cart-2-line"></i> Cart
                </a>
            <% } %>

            <% if(locals.loggedInUser && loggedInUser.role === 'admin') { %>
                <a href="/owners/admin" class="text-blue-600 hover:text-blue-700 font-semibold transition-colors flex items-center gap-1">
                    <i class="ri-dashboard-line"></i> Admin
                </a>
                <a href="/owners/users" class="text-blue-600 hover:text-blue-700 font-semibold transition-colors flex items-center gap-1">
                    <i class="ri-group-line"></i> Users
                </a>
            <% } %>
        </div>
        
        <!-- Right Side -->
        <div class="flex gap-3 items-center">

            <% if(locals.loggedInUser) { %>
                <!-- LOGGED IN -->
                <div class="flex items-center gap-3">
                    <!-- Avatar -->
                    <div class="w-9 h-9 rounded-full flex items-center justify-center
                        <% if(loggedInUser.role === 'admin') { %> bg-blue-100 <% } else { %> bg-zinc-100 <% } %>">
                        <span class="text-sm font-bold 
                            <% if(loggedInUser.role === 'admin') { %> text-blue-600 <% } else { %> text-zinc-600 <% } %>">
                            <%= loggedInUser.fullname.charAt(0).toUpperCase() %>
                        </span>
                    </div>
                    
                    <!-- Name + Role -->
                    <div class="hidden sm:flex flex-col">
                        <span class="text-sm font-medium text-zinc-800"><%= loggedInUser.fullname %></span>
                        <% if(loggedInUser.role === 'admin') { %>
                            <span class="text-[10px] text-blue-600 font-bold leading-tight">ADMIN</span>
                        <% } %>
                    </div>

                    <!-- Logout -->
                    <a href="/logout" 
                       class="ml-2 px-4 py-2 border border-zinc-200 hover:border-red-300 hover:bg-red-50 text-zinc-500 hover:text-red-500 rounded-full transition text-sm font-medium flex items-center gap-1">
                        <i class="ri-logout-box-r-line"></i>
                        <span class="hidden sm:inline">Logout</span>
                    </a>
                </div>

            <% } else { %>
                <!-- NOT LOGGED IN -->
                <a href="/auth" class="text-sm font-medium text-zinc-600 hover:text-zinc-900 transition-colors">Login</a>
                <a href="/auth" class="px-5 py-2.5 bg-zinc-900 hover:bg-zinc-700 text-white rounded-full transition text-sm font-medium">
                    Sign Up
                </a>
            <% } %>
        </div>
    </nav>
</body>
</html>