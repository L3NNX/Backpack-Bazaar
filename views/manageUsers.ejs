<%- include('./partials/header') %>

<% if(success && success.length > 0){ %>
<div class="fixed top-16 left-1/2 -translate-x-1/2 z-50 px-5 py-3 rounded-lg bg-green-500 text-white shadow-lg text-sm font-medium">
    <%= success %>
</div>
<% } %>

<div class="flex min-h-screen">
    <aside class="w-60 flex-shrink-0 border-r border-zinc-100 pt-10 px-6">
        <h4 class="text-xs font-semibold text-zinc-400 uppercase tracking-widest mb-4">Admin</h4>
        <nav class="flex flex-col gap-2 text-sm text-zinc-600">
            <a class="hover:text-zinc-900 transition" href="/owners/admin">
                <i class="ri-add-circle-line mr-1"></i> Create Product
            </a>
            <a class="hover:text-zinc-900 transition font-medium text-blue-600" href="/owners/users">
                <i class="ri-group-line mr-1"></i> Manage Users
            </a>
            <a class="hover:text-zinc-900 transition" href="/shop">
                <i class="ri-store-2-line mr-1"></i> View Shop
            </a>
        </nav>
    </aside>

    <main class="flex-1 px-12 py-10">
        <h2 class="text-2xl font-bold text-zinc-900 mb-2">Manage Users</h2>
        <p class="text-sm text-zinc-500 mb-8"><%= users.length %> total users</p>

        <div class="max-w-3xl bg-white rounded-xl border border-zinc-100 overflow-hidden">
            <table class="w-full text-sm">
                <thead>
                    <tr class="border-b border-zinc-100 bg-zinc-50 text-left text-zinc-500">
                        <th class="px-6 py-3 font-medium">User</th>
                        <th class="px-6 py-3 font-medium">Email</th>
                        <th class="px-6 py-3 font-medium">Role</th>
                        <th class="px-6 py-3 font-medium text-right">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(function(user) { %>
                    <tr class="border-b border-zinc-50 hover:bg-zinc-50 transition">
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-3">
                                <div class="w-9 h-9 rounded-full flex items-center justify-center
                                    <% if(user.role === 'admin') { %> bg-blue-100 <% } else { %> bg-zinc-100 <% } %>">
                                    <span class="text-xs font-bold 
                                        <% if(user.role === 'admin') { %> text-blue-600 <% } else { %> text-zinc-500 <% } %>">
                                        <%= user.fullname.charAt(0).toUpperCase() %>
                                    </span>
                                </div>
                                <span class="font-medium text-zinc-800"><%= user.fullname %></span>
                            </div>
                        </td>
                        <td class="px-6 py-4 text-zinc-500"><%= user.email %></td>
                        <td class="px-6 py-4">
                            <% if(user.role === 'admin') { %>
                                <span class="px-2.5 py-1 bg-blue-100 text-blue-700 text-xs font-semibold rounded-full">Admin</span>
                            <% } else { %>
                                <span class="px-2.5 py-1 bg-zinc-100 text-zinc-600 text-xs font-semibold rounded-full">User</span>
                            <% } %>
                        </td>
                        <td class="px-6 py-4 text-right">
                            <% if(user.role === 'user') { %>
                                <form action="/owners/promote/<%= user._id %>" method="POST" class="inline">
                                    <button type="submit" class="px-3 py-1.5 bg-blue-600 hover:bg-blue-700 text-white text-xs font-medium rounded-lg transition">
                                        <i class="ri-arrow-up-line"></i> Make Admin
                                    </button>
                                </form>
                            <% } else if(user._id.toString() !== loggedInUser._id.toString()) { %>
                                <form action="/owners/demote/<%= user._id %>" method="POST" class="inline">
                                    <button type="submit" class="px-3 py-1.5 bg-red-50 hover:bg-red-100 text-red-600 text-xs font-medium rounded-lg transition">
                                        <i class="ri-arrow-down-line"></i> Demote
                                    </button>
                                </form>
                            <% } else { %>
                                <span class="text-xs text-zinc-400 italic">You</span>
                            <% } %>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </main>
</div>

<%- include('./partials/footer') %>