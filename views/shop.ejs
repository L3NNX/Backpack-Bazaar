<%- include('./partials/header') %>

<% if(success && success.length > 0){ %>
<div class="fixed top-16 left-1/2 -translate-x-1/2 z-50 px-5 py-3 rounded-lg bg-green-500 text-white shadow-lg text-sm font-medium">
    <%= success %>
</div>
<% } %>

<div class="flex min-h-screen">
    <!-- Sidebar -->
    <aside class="w-60 flex-shrink-0 border-r border-zinc-100 pt-10 px-6">
        <h4 class="text-xs font-semibold text-zinc-400 uppercase tracking-widest mb-4">Browse</h4>
        <nav class="flex flex-col gap-2 text-sm text-zinc-600">
            <a class="hover:text-zinc-900 transition" href="/shop">All Products</a>
            <a class="hover:text-zinc-900 transition" href="/shop">New Arrivals</a>
            <a class="hover:text-zinc-900 transition" href="/shop">Discounted</a>
        </nav>
        <div class="mt-8 pt-8 border-t border-zinc-100">
            <h4 class="text-xs font-semibold text-zinc-400 uppercase tracking-widest mb-4">Sort By</h4>
            <form action="/shop" method="get">
                <select class="w-full border border-zinc-200 rounded-lg px-3 py-2 text-sm bg-white text-zinc-700" name="sortby">
                    <option value="popular">Popular</option>
                    <option value="newest">Newest</option>
                    <option value="price_asc">Price: Low to High</option>
                    <option value="price_desc">Price: High to Low</option>
                </select>
            </form>
        </div>
    </aside>

    <!-- Products Grid -->
    <main class="flex-1 px-10 py-10">
        <div class="flex items-center justify-between mb-8">
            <h1 class="text-2xl font-bold text-zinc-900">All Products</h1>
            <span class="text-sm text-zinc-400"><%= products.length %> items</span>
        </div>

        <% if(products.length === 0) { %>
        <div class="flex flex-col items-center justify-center h-64 text-zinc-400">
            <i class="ri-box-3-line text-5xl mb-4"></i>
            <p class="text-sm">No products yet. Check back soon!</p>
        </div>
        <% } %>

        <div class="grid grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            <% products.forEach(function(product){ %>
            <div class="rounded-2xl overflow-hidden shadow-sm hover:shadow-md transition-shadow border border-zinc-100" style="background-color: <%= product.bgcolor || '#f4f4f5' %>">
                <div class="w-full h-52 overflow-hidden">
                    <img class="h-full w-full object-cover" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
                </div>
                <div class="flex justify-between items-center px-4 py-4 rounded-b-2xl" style="background-color: <%= product.panelcolor || '#ffffff' %>; color: <%= product.textcolor || '#1a1a1a' %>">
                    <div>
                        <h3 class="font-semibold text-sm"><%= product.name %></h3>
                        <div class="flex items-center gap-2 mt-0.5">
                            <% if(product.discount > 0) { %>
                            <span class="text-xs line-through opacity-50">&#8377;<%= product.price %></span>
                            <span class="font-bold text-sm">&#8377;<%= Math.round(product.price - (product.price * product.discount / 100)) %></span>
                            <span class="text-xs bg-green-100 text-green-700 px-1.5 py-0.5 rounded-full"><%= product.discount %>% off</span>
                            <% } else { %>
                            <span class="font-bold text-sm">&#8377;<%= product.price %></span>
                            <% } %>
                        </div>
                    </div>
                    <a class="w-9 h-9 flex items-center justify-center rounded-full bg-white shadow hover:scale-110 transition-transform" href="/addtocart/<%= product._id %>">
                        <i class="ri-add-line text-zinc-800"></i>
                    </a>
                </div>
            </div>
            <% }) %>
        </div>
    </main>
</div>

<%- include('./partials/footer') %>