<%- include('./partials/header') %>

<% if (typeof error !== 'undefined' && error.length > 0) { %>
<div class="fixed top-16 left-1/2 -translate-x-1/2 z-50 px-5 py-3 rounded-lg bg-red-500 text-white shadow-lg text-sm font-medium">
    <%= error %>
</div>
<% } %>

<div class="min-h-screen flex">
    <!-- Register -->
    <div class="w-1/2 flex items-center justify-center bg-zinc-50">
        <div class="w-full max-w-sm px-8 py-10">
            <h2 class="text-3xl font-bold text-zinc-900 mb-1">Create Account</h2>
            <p class="text-zinc-500 text-sm mb-8">Join Jhola and start shopping</p>
            <form autocomplete="off" action="/user/register" method="post" class="space-y-4">
                <input class="bg-white block w-full px-4 py-3 border border-zinc-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
                    type="text" placeholder="Full Name" name="fullname" required>
                <input class="bg-white block w-full px-4 py-3 border border-zinc-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
                    type="email" placeholder="Email Address" name="email" required>
                <input class="bg-white block w-full px-4 py-3 border border-zinc-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
                    type="password" placeholder="Password" name="password" required>
                <button type="submit" class="w-full py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition text-sm">
                    Create My Account
                </button>
            </form>
        </div>
    </div>

    <!-- Divider -->
    <div class="w-px bg-zinc-200 my-20"></div>

    <!-- Login -->
    <div class="w-1/2 flex items-center justify-center">
        <div class="w-full max-w-sm px-8 py-10">
            <h2 class="text-3xl font-bold text-zinc-900 mb-1">Welcome Back</h2>
            <p class="text-zinc-500 text-sm mb-8">Login to your Jhola account</p>
            <form autocomplete="off" action="/user/login" method="post" class="space-y-4">
                <input class="block bg-zinc-50 w-full px-4 py-3 border border-zinc-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
                    type="email" placeholder="Email Address" name="email" required>
                <input class="block bg-zinc-50 w-full px-4 py-3 border border-zinc-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
                    type="password" placeholder="Password" name="password" required>
                <button type="submit" class="w-full block py-3 bg-zinc-900 hover:bg-zinc-700 text-white font-semibold rounded-lg transition text-sm text-center">
                    Login
                </button>
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>