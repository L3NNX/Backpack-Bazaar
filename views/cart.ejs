<%- include('./partials/header') %>

<div class="min-h-screen px-8 py-10">
    <h1 class="text-2xl font-bold text-zinc-900 mb-8">Your Cart</h1>

    <% if(!products || products.length === 0) { %>
    <div class="flex flex-col items-center justify-center h-64 text-zinc-400">
        <i class="ri-shopping-cart-line text-6xl mb-4"></i>
        <p class="text-sm mb-4">Your cart is empty</p>
        <a href="/shop" class="px-6 py-2 bg-blue-600 text-white rounded-full text-sm font-medium hover:bg-blue-700 transition">
            Continue Shopping
        </a>
    </div>
    <% } else { %>

    <div class="flex flex-col lg:flex-row gap-8">
        <!-- Cart Items -->
        <div class="flex-1 space-y-4">
            <% products.forEach(function(product){ %>
            <div class="flex items-center gap-4 bg-white border border-zinc-100 rounded-2xl p-4 shadow-sm">
                <div class="w-20 h-20 rounded-xl overflow-hidden flex-shrink-0" style="background-color: <%= product.bgcolor || '#f4f4f5' %>">
                    <img class="w-full h-full object-cover" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
                </div>
                <div class="flex-1">
                    <h3 class="font-semibold text-zinc-900 text-sm"><%= product.name %></h3>
                    <div class="flex items-center gap-2 mt-1">
                        <% if(product.discount > 0) { %>
                        <span class="text-xs text-zinc-400 line-through">&#8377;<%= product.price %></span>
                        <span class="font-bold text-zinc-900 text-sm">&#8377;<%= Math.round(product.price - (product.price * product.discount / 100)) %></span>
                        <span class="text-xs bg-green-100 text-green-700 px-1.5 py-0.5 rounded-full"><%= product.discount %>% off</span>
                        <% } else { %>
                        <span class="font-bold text-zinc-900 text-sm">&#8377;<%= product.price %></span>
                        <% } %>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>

        <!-- Order Summary -->
        <div class="w-full lg:w-80 flex-shrink-0">
            <div class="bg-zinc-50 rounded-2xl p-6 border border-zinc-100">
                <h2 class="font-bold text-zinc-900 text-lg mb-5">Order Summary</h2>
                <div class="space-y-3 text-sm text-zinc-600">
                    <div class="flex justify-between">
                        <span>Items (<%= products.length %>)</span>
                        <span>&#8377;<%= bill %></span>
                    </div>
                    <div class="flex justify-between">
                        <span>Shipping</span>
                        <span class="text-green-600 font-medium">Free</span>
                    </div>
                    <div class="border-t border-zinc-200 pt-3 flex justify-between font-bold text-zinc-900 text-base">
                        <span>Total</span>
                        <span>&#8377;<%= bill %></span>
                    </div>
                </div>
                <button class="w-full mt-6 py-3 bg-zinc-900 hover:bg-zinc-700 text-white font-semibold rounded-xl transition text-sm">
                    Proceed to Checkout
                </button>
                <a href="/shop" class="block mt-3 text-center text-sm text-zinc-500 hover:text-zinc-700 transition">
                    Continue Shopping
                </a>
            </div>
        </div>
    </div>
    <% } %>
</div>

<%- include('./partials/footer') %>
