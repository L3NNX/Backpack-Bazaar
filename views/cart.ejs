<%- include('./partials/header') %>

<% if(success && success.length > 0){ %>
<div class="fixed top-16 left-1/2 -translate-x-1/2 z-50 px-5 py-3 rounded-lg bg-green-500 text-white shadow-lg text-sm font-medium">
    <%= success %>
</div>
<% } %>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="fixed inset-0 z-50 hidden items-center justify-center">
    <!-- Backdrop -->
    <div class="absolute inset-0 bg-black/50 backdrop-blur-sm" onclick="document.getElementById('deleteModal').classList.add('hidden'); document.getElementById('deleteModal').classList.remove('flex');"></div>
    
    <!-- Modal Box -->
    <div class="relative bg-white rounded-2xl shadow-2xl p-6 mx-4 w-full max-w-sm">
        <!-- Icon -->
        <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-red-100 flex items-center justify-center">
            <i class="ri-shopping-cart-line text-3xl text-red-500"></i>
        </div>
        
        <!-- Title -->
        <h3 class="text-xl font-bold text-zinc-900 text-center mb-2">Remove from Cart?</h3>
        
        <!-- Message -->
        <p class="text-zinc-500 text-center text-sm mb-6">
            Are you sure you want to remove this item from your cart?
        </p>
        
        <!-- Buttons -->
        <div class="flex gap-3">
            <button onclick="document.getElementById('deleteModal').classList.add('hidden'); document.getElementById('deleteModal').classList.remove('flex');" 
                    class="flex-1 py-3 px-4 border border-zinc-200 rounded-xl text-zinc-700 font-medium hover:bg-zinc-50 transition text-sm">
                Cancel
            </button>
            <a id="confirmDeleteLink" href="#" 
               class="flex-1 py-3 px-4 bg-red-500 hover:bg-red-600 rounded-xl text-white font-medium text-center transition text-sm flex items-center justify-center gap-2">
                <i class="ri-delete-bin-line"></i>
                Remove
            </a>
        </div>
    </div>
</div>

<!-- Clear Cart Confirmation Modal -->
<div id="clearCartModal" class="fixed inset-0 z-50 hidden items-center justify-center">
    <!-- Backdrop -->
    <div class="absolute inset-0 bg-black/50 backdrop-blur-sm" onclick="document.getElementById('clearCartModal').classList.add('hidden'); document.getElementById('clearCartModal').classList.remove('flex');"></div>
    
    <!-- Modal Box -->
    <div class="relative bg-white rounded-2xl shadow-2xl p-6 mx-4 w-full max-w-sm">
        <!-- Icon -->
        <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-orange-100 flex items-center justify-center">
            <i class="ri-delete-bin-7-line text-3xl text-orange-500"></i>
        </div>
        
        <!-- Title -->
        <h3 class="text-xl font-bold text-zinc-900 text-center mb-2">Clear Entire Cart?</h3>
        
        <!-- Message -->
        <p class="text-zinc-500 text-center text-sm mb-6">
            This will remove all items from your cart. Are you sure?
        </p>
        
        <!-- Buttons -->
        <div class="flex gap-3">
            <button onclick="document.getElementById('clearCartModal').classList.add('hidden'); document.getElementById('clearCartModal').classList.remove('flex');" 
                    class="flex-1 py-3 px-4 border border-zinc-200 rounded-xl text-zinc-700 font-medium hover:bg-zinc-50 transition text-sm">
                Cancel
            </button>
            <a href="/clearcart" 
               class="flex-1 py-3 px-4 bg-orange-500 hover:bg-orange-600 rounded-xl text-white font-medium text-center transition text-sm flex items-center justify-center gap-2">
                <i class="ri-delete-bin-7-line"></i>
                Clear All
            </a>
        </div>
    </div>
</div>

<div class="min-h-screen px-8 py-10">
    <div class="flex items-center justify-between mb-8">
        <h1 class="text-2xl font-bold text-zinc-900">Your Cart</h1>
        <% if(products && products.length > 0) { %>
        <button onclick="document.getElementById('clearCartModal').classList.remove('hidden'); document.getElementById('clearCartModal').classList.add('flex');"
                class="text-sm text-red-500 hover:text-red-700 transition flex items-center gap-1">
            <i class="ri-delete-bin-7-line"></i>
            Clear Cart
        </button>
        <% } %>
    </div>

    <% if(!products || products.length === 0) { %>
    <div class="flex flex-col items-center justify-center h-64 text-zinc-400">
        <i class="ri-shopping-cart-line text-6xl mb-4"></i>
        <p class="text-sm mb-4">Your cart is empty</p>
        <a href="/shop" class="px-6 py-2 bg-blue-600 text-white rounded-full text-sm font-medium hover:bg-blue-700 transition">
            Continue Shopping
        </a>
    </div>
    <% } else { %>

    <div class="flex flex-col lg:flex-row gap-8">
        <!-- Cart Items -->
        <div class="flex-1 space-y-4">
            <% products.forEach(function(product){ %>
            <div class="flex items-center gap-4 bg-white border border-zinc-100 rounded-2xl p-4 shadow-sm hover:shadow-md transition-shadow">
                <div class="w-20 h-20 rounded-xl overflow-hidden flex-shrink-0" style="background-color: <%= product.bgcolor || '#f4f4f5' %>">
                    <% if(product.image) { %>
                    <img class="w-full h-full object-cover" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
                    <% } else { %>
                    <div class="w-full h-full flex items-center justify-center text-zinc-400">
                        <i class="ri-image-line text-2xl"></i>
                    </div>
                    <% } %>
                </div>
                <div class="flex-1">
                    <h3 class="font-semibold text-zinc-900 text-sm"><%= product.name %></h3>
                    <div class="flex items-center gap-2 mt-1">
                        <% if(product.discount > 0) { %>
                        <span class="text-xs text-zinc-400 line-through">&#8377;<%= product.price %></span>
                        <span class="font-bold text-zinc-900 text-sm">&#8377;<%= Math.round(product.price - (product.price * product.discount / 100)) %></span>
                        <span class="text-xs bg-green-100 text-green-700 px-1.5 py-0.5 rounded-full"><%= product.discount %>% off</span>
                        <% } else { %>
                        <span class="font-bold text-zinc-900 text-sm">&#8377;<%= product.price %></span>
                        <% } %>
                    </div>
                </div>
                
                <!-- Remove Button -->
                <button onclick="document.getElementById('deleteModal').classList.remove('hidden'); document.getElementById('deleteModal').classList.add('flex'); document.getElementById('confirmDeleteLink').href='/removefromcart/<%= product._id %>';"
                        class="w-10 h-10 flex items-center justify-center rounded-full bg-red-50 hover:bg-red-100 text-red-500 transition-all hover:scale-110"
                        title="Remove from cart">
                    <i class="ri-delete-bin-line text-lg"></i>
                </button>
            </div>
            <% }) %>
        </div>

        <!-- Order Summary -->
        <div class="w-full lg:w-80 flex-shrink-0">
            <div class="bg-zinc-50 rounded-2xl p-6 border border-zinc-100 sticky top-24">
                <h2 class="font-bold text-zinc-900 text-lg mb-5">Order Summary</h2>
                <div class="space-y-3 text-sm text-zinc-600">
                    <div class="flex justify-between">
                        <span>Items (<%= products.length %>)</span>
                        <span>&#8377;<%= bill %></span>
                    </div>
                    <div class="flex justify-between">
                        <span>Shipping</span>
                        <span class="text-green-600 font-medium">Free</span>
                    </div>
                    <div class="border-t border-zinc-200 pt-3 flex justify-between font-bold text-zinc-900 text-base">
                        <span>Total</span>
                        <span>&#8377;<%= bill %></span>
                    </div>
                </div>
                <button class="w-full mt-6 py-3 bg-zinc-900 hover:bg-zinc-700 text-white font-semibold rounded-xl transition text-sm">
                    Proceed to Checkout
                </button>
                <a href="/shop" class="block mt-3 text-center text-sm text-zinc-500 hover:text-zinc-700 transition">
                    Continue Shopping
                </a>
            </div>
        </div>
    </div>
    <% } %>
</div>

<%- include('./partials/footer') %>