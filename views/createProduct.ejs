<%- include('./partials/header') %>

<% if(success && success.length > 0){ %>
<div class="fixed top-16 left-1/2 -translate-x-1/2 z-50 px-5 py-3 rounded-lg bg-green-500 text-white shadow-lg text-sm font-medium">
    <%= success %>
</div>
<% } %>

<div class="flex min-h-screen">
    <!-- Sidebar -->
    <aside class="w-60 flex-shrink-0 border-r border-zinc-100 pt-10 px-6">
        <h4 class="text-xs font-semibold text-zinc-400 uppercase tracking-widest mb-4">Admin</h4>
        <nav class="flex flex-col gap-2 text-sm text-zinc-600">
            <a class="hover:text-zinc-900 transition font-medium text-blue-600" href="/owners/admin">Create Product</a>
            <a class="hover:text-zinc-900 transition" href="/shop">View Shop</a>
        </nav>
    </aside>

    <!-- Main Form -->
    <main class="flex-1 px-12 py-10">
        <h2 class="text-2xl font-bold text-zinc-900 mb-8">Create New Product</h2>
        <form action="/products/create" method="post" enctype="multipart/form-data" class="max-w-xl space-y-6">

            <div class="space-y-4">
                <h3 class="text-sm font-semibold text-zinc-400 uppercase tracking-widest">Product Details</h3>
                <div>
                    <label class="block text-sm font-medium text-zinc-700 mb-1">Product Image</label>
                    <input type="file" name="image" accept="image/*" required
                        class="block w-full text-sm text-zinc-600 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-medium file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100 cursor-pointer">
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-zinc-700 mb-1">Product Name</label>
                        <input type="text" name="name" placeholder="e.g. Blue Tote Bag" required
                            class="border border-zinc-200 rounded-lg p-2.5 w-full text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-zinc-700 mb-1">Price (&#8377;)</label>
                        <input type="number" name="price" placeholder="e.g. 999" required
                            class="border border-zinc-200 rounded-lg p-2.5 w-full text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-zinc-700 mb-1">Discount (%)</label>
                        <input type="number" name="discount" placeholder="e.g. 10" value="0"
                            class="border border-zinc-200 rounded-lg p-2.5 w-full text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                </div>
            </div>

            <div class="space-y-4 pt-4 border-t border-zinc-100">
                <h3 class="text-sm font-semibold text-zinc-400 uppercase tracking-widest">Panel Colors</h3>
                <p class="text-xs text-zinc-400">Use any valid CSS color (e.g. <code>#ff6b6b</code>, <code>white</code>, <code>rgb(200,200,200)</code>)</p>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-zinc-700 mb-1">Background Color</label>
                        <input type="text" name="bgcolor" placeholder="#f4f4f5"
                            class="border border-zinc-200 rounded-lg p-2.5 w-full text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-zinc-700 mb-1">Panel Color</label>
                        <input type="text" name="panelcolor" placeholder="#ffffff"
                            class="border border-zinc-200 rounded-lg p-2.5 w-full text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-zinc-700 mb-1">Text Color</label>
                        <input type="text" name="textcolor" placeholder="#1a1a1a"
                            class="border border-zinc-200 rounded-lg p-2.5 w-full text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                </div>
            </div>

            <button type="submit" class="px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-xl transition text-sm">
                Create Product
            </button>
        </form>
    </main>
</div>

<%- include('./partials/footer') %>